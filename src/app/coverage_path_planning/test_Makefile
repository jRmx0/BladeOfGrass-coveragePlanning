# Master Test Makefile for Coverage Path Planning
# Coordinates all test suites in the project

.PHONY: all test test-bcd test-integration clean clean-all help

all: test

test: test-bcd test-integration
	@echo "All test suites completed successfully!"

test-bcd:
	@echo "Running BCD algorithm tests..."
	@$(MAKE) -C boustrophedon_cellular_decomposition/tests test

test-integration:
	@echo "Running integration tests..."
	@$(MAKE) -C tests test

clean: clean-bcd clean-integration

clean-bcd:
	@$(MAKE) -C boustrophedon_cellular_decomposition/tests clean

clean-integration:
	@$(MAKE) -C tests clean

clean-all: clean
	@echo "All test artifacts cleaned"

help:
	@echo "Master Test Makefile for Coverage Path Planning"
	@echo ""
	@echo "Available targets:"
	@echo "  all             - Run all test suites (default)"
	@echo "  test            - Run all test suites"
	@echo "  test-bcd        - Run BCD algorithm tests only"
	@echo "  test-integration - Run integration tests only"
	@echo "  clean           - Clean all test artifacts"
	@echo "  clean-bcd       - Clean BCD test artifacts only"
	@echo "  clean-integration - Clean integration test artifacts only"
	@echo "  help            - Show this help message"
	@echo ""
	@echo "Test Structure:"
	@echo "  boustrophedon_cellular_decomposition/tests/ - Algorithm unit tests"
	@echo "  tests/                                      - Integration tests"